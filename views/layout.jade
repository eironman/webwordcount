			function writeMail( nom, dom, etiqueta){
				if ( !etiqueta ){
					etiqueta = nom+'@'+dom;
				}
				document.write( '<a hr'+'ef="mai'+'lto:'+nom+'@'+dom+'">'+etiqueta+'</a>' );
			}
			$(function(){
				// Length filter
				$('ul.dropdown-menu > li').on('click', function(){
					$('ul.dropdown-menu > li.disabled').removeClass('disabled');
					$(this).addClass('disabled');
					$('li.dropdown > a > span').html($(this).children('a').html());
					if ( $("#url").val() != '' ) $("#form-count").submit();
				})
			})
		
