extends layout

block content
	div.container-fluid
		div.row
			div(class='col-sm-3 col-md-2 sidebar')
				ul#words-text(class='nav nav-sidebar')
					li
						a(href='#') word

		div(class='col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main')
			h2.page-header Word editor
			h4 Insert here the text to work with

			textarea#text-editor
			#text-editor-info
				ul
					li Words: 
						span -
					li Paragraphs: 
						span -
	
	script(src='/js/libs/underscore-1.6.0.min.js')
	script(src='/js/libs/backbone-1.0.0.min.js')
	script(src='/js/models/editormodel.js')
	script(src='/js/views/editorview.js')
	script(src='/js/views/editorwordlist.js')
	script(src='/js/editor.js')
				
